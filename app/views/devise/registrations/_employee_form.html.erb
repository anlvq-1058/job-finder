<div class="jp_regiter_top_heading">
  <p>Fields with * are mandetory </p>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <!--Form Group-->
    <div class="form-group col-md-6 col-sm-6 col-xs-12">
      <%= f.label :name, "Name:", class: "require" %>
      <%= f.text_field :name %>
    </div>

    <!--Form Group-->
    <div class="form-group col-md-6 col-sm-6 col-xs-12">
      <%= f.label :email, "Email:", class: "require" %>
      <%= f.email_field :email %>
    </div>
    <!--Form Group-->
    <div class="form-group col-md-6 col-sm-6 col-xs-12">
      <%= f.label :password, "Password:", class: "require" %>
      <%= f.password_field :password %>
    </div>
    <!--Form Group-->
    <div class="form-group col-md-6 col-sm-6 col-xs-12">
      <%= f.label :password_confirmation, "Password confirmation:", class: "require" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <!--Form Group-->
    <div class="form-group col-md-6 col-sm-6 col-xs-12 custom_input">
      <%= f.label :avatar, "Avatar:" do %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      <% end %>
      <p>JPG, JPEG, GIF, PNG - 5MB MAX SIZE</p>
    </div>
    <!--Form Group-->
    <div class="form-group col-md-6 col-sm-6 col-xs-12">
      <%= f.label :birthday, "Birthday:" %>
      <%= f.date_field :birthday, class: "birthday" %>
    </div>

    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="check-box text-center">
        <%= f.check_box :role %>
        <%= f.label :role, "For Recruiter" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <!-- <%= recaptcha_tags %> -->
  </div>
  <div class="login_btn_wrapper register_btn_wrapper login_wrapper ">
    <%= f.submit "register", class: "btn btn-primary login_btn" %>
  </div>
<% end %>
<div class="login_message">
  <p>Already a member? 
    <%= link_to "Log in", new_session_path(resource_name) %>
  </p>
</div>
