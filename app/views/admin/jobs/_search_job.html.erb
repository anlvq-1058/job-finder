<div class="col-md-12">
  <%= search_form_for @q, url: admin_jobs_path do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :title_cont, "Title", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <%= f.text_field :title_cont, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :address_cont, "Address Job", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <%= f.text_field :address_cont, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :job_type_eq, "Job Type", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <%= f.select :job_type_eq, [['Full time', 0], ['Part time', 1]], options = { include_blank: "All time" }, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :company_name_cont, "Company Name", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <%= f.text_field :company_name_cont, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :company_address_cont, "Address Company", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <%= f.text_field :company_address_cont, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :gender_eq, "Gender", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <div class="form-check">
                    <%= f.radio_button :gender_eq, 1, options = { checked: checked_gender_job("1") } %>
                    <label>Male</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :gender_eq, 2, options = { checked: checked_gender_job("2") } %>
                    <label>Female</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :gender_eq, 0, options = { checked: checked_gender_job("0") } %>
                    <label>All</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :experience, "Experience", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <div class="form-check">
                    <%= f.radio_button :experience, 1, options = { checked: checked_experience_job("1") } %>
                    <label>< 1 Year</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :experience, 2, options = { checked: checked_experience_job("2") } %>
                    <label>1 - 3 Year</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :experience, 3, options = { checked: checked_experience_job("3") } %>
                    <label>> 3 Year</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <%= f.label :salary, "Salary", class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <div class="form-check">
                    <%= f.radio_button :salary, 1, options = { checked: checked_salary_job("1") } %>
                    <label>100$ - 500$</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :salary, 2, options = { checked: checked_salary_job("2") } %>
                    <label>500$ - 1000$</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :salary, 3, options = { checked: checked_salary_job("3") } %>
                    <label>1000$ - 3000$</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-check">
                    <%= f.radio_button :salary, 4, options = { checked: checked_salary_job("4") } %>
                    <label>3000$ - 5000$</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :salary, 5, options = { checked: checked_salary_job("5") } %>
                    <label>5000$ - 10,000$</label>
                  </div>
                  <div class="form-check">
                    <%= f.radio_button :salary, 6, options = { checked: checked_salary_job("6") } %>
                    <label>> 10,000$</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-12">
          <div class="form-check">
            <%= check_box :jobs_are_recruiting, :end_at, options = { checked: checked_end_at_job("1") } %>
            Jobs Are Recruiting
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-12">
          <%= f.submit "Search", type: "submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
