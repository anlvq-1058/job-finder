<div class="card">
  <div class="card-header card-header-primary">
    <h4 class="card-title"><%= yield :title %> Your Company</h4>
  </div>
  <div class="card-body">
    <%= form_for [:admin, job], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", resource: job %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group bmd-form-group">
            <%= f.label :title, "Job title: ", class: "bmd-label-floating " %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group bmd-form-group">
            <%= f.label :salary, "Salary: ", class: "bmd-label-floating " %>
            <%= f.text_field :salary, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group bmd-form-group row">
            <%= f.label :end_at, "End at: ", class: "" %>
            <%= f.date_field :end_at, {class: "form-control", value:  job.end_at ? job.end_at.to_s : Date.current.to_s} %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group bmd-form-group row">
            <%= f.label :gender, "Gender: ", class: "col-sm-4" %>
            <%= f.select :gender, options_for_select([["all", "all"], ["male","male"], ["female", "female"]], selected: ["all", "0"]), {}, {class: "js-source-states col-sm-8"} %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group bmd-form-group">
            <%= f.label :job_type, "Job type: " %>
            <%= f.select :job_type, options_for_select([["full_time", "full_time"], ["part_time","part_time"]]), {}, {class: "js-source-states col-sm-8"} %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group bmd-form-group">
            <%= f.label :experience, "Experience: ", class: "bmd-label-floating" %>
            <%= f.number_field :experience, in: 0.0..20.0, step: 0.5, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= f.label :location_ids, "Location: " %>
            <%= f.select :location_ids, Location.all.pluck(:name, :id), {}, {multiple: true, class: "js-source-states multi-select form-control col-sm-8"} %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group bmd-form-group">
            <%= f.label :address, "Address: ", class: "bmd-label-floating" %>
            <%= f.text_area :address, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group bmd-form-group">
            <%= f.label :describe, "Describe: " %>
            <%= f.cktext_area :describe, cols: 40, ckeditor: { uiColor: '#9124a3', toolbar: 'mini' } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.submit yield(:btn), class: "btn btn-primary pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
