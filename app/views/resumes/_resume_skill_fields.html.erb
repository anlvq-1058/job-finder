<div class="nested-fields round">
  <div class="link mb-2 row">
    <%=  link_to_remove_association f, class: "float-right" do %>
      <i class="fas fa-backspace"></i>
    <% end %>
  </div>
  <div class="form-group row">
    <%= f.label :skill_id, 'Skill name: ', class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.select :skill_id, options_for_select(@skills, f.object.skill_id), {}, {class: "js-source-states form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :point, 'Skill point: ', class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.number_field :point, class: "form-control" %>
    </div>
  </div>
</div>
