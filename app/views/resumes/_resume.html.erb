<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <div class="jp_recent_resume_box_wrapper">
    <div class="row">
      <div class="jp_recent_resume_img_wrapper">
        <%= resume_avatar resume, "medium" %>
      </div>
      <div class="jp_recent_resume_cont_wrapper">
        <h3><%= resume.title %></h3>
        <p>
          <%= resume.position %>
        </p>
      </div>
      <div class="jp_recent_resume_btn_wrapper">
        <i class="fas fa-clock"></i>
        <%= resume.updated_at.strftime("%H:%M %d/%m/%Y") %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to resume, method: :delete, data: {confirm: "Are you sure want to delete this resume?"}, class: "btn btn-outline-danger float-right" do %>
          <i class="fas fa-trash"></i>
          Delete
        <% end %>
        <%= link_to edit_resume_path(resume), class: "btn btn-outline-secondary float-right mr-2" do %>
          <i class="far fa-edit"></i>
          Edit
        <% end %>
        <%= link_to resume_path(resume), class: "btn btn-outline-secondary float-right mr-2" do %>
          <i class="fas fa-eye"></i>
          Show
        <% end %>
      </div>
    </div>
  </div>
</div>
